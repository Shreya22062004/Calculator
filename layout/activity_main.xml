<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp"
        android:id="@+id/buttons_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_c"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:text="C"
        android:textColor="@color/orange"
        android:backgroundTint="#535050"
        android:textSize="32dp"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_open_bracket"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_toRightOf="@id/button_c"
        android:layout_margin="12dp"
        android:text="("
        android:tag="("
        android:textColor="@color/orange"
        android:backgroundTint="#535050"
        android:textSize="32dp"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_close_bracket"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_toRightOf="@id/button_open_bracket"
        android:layout_margin="12dp"
        android:text=")"
        android:tag=")"
        android:textColor="@color/orange"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_divide"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_toRightOf="@id/button_close_bracket"
        android:layout_margin="12dp"
        android:text="/"
        android:tag="/"
        android:textColor="@color/orange"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        style = "@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_below="@id/button_c"
        android:text="7"
        android:tag="7"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_open_bracket"
        android:layout_toRightOf="@id/button_7"
        android:layout_margin="12dp"
        android:text="8"
        android:tag="8"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_close_bracket"
        android:layout_toRightOf="@id/button_8"
        android:layout_margin="12dp"
        android:text="9"
        android:tag="9"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_divide"
        android:layout_toRightOf="@id/button_9"
        android:layout_margin="12dp"
        android:text="*"
        android:tag="*"
        android:textColor="@color/orange"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_below="@id/button_7"
        android:text="4"
        android:tag="4"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_8"
        android:layout_toRightOf="@id/button_4"
        android:layout_margin="12dp"
        android:text="5"
        android:tag="5"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_9"
        android:layout_toRightOf="@id/button_5"
        android:layout_margin="12dp"
        android:text="6"
        android:tag="6"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_multiply"
        android:layout_toRightOf="@id/button_6"
        android:layout_margin="12dp"
        android:text="+"
        android:tag="+"
        android:textColor="@color/orange"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_below="@id/button_4"
        android:text="1"
        android:tag="1"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_5"
        android:layout_toRightOf="@id/button_1"
        android:layout_margin="12dp"
        android:text="2"
        android:tag="2"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_6"
        android:layout_toRightOf="@id/button_2"
        android:layout_margin="12dp"
        android:text="3"
        android:tag="3"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_subtract"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_add"
        android:layout_toRightOf="@id/button_3"
        android:layout_margin="12dp"
        android:text="-"
        android:tag="-"
        android:textColor="@color/orange"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_ac"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_below="@id/button_1"
        android:text="AC"
        android:tag="AC"
        android:textColor="@color/orange"
        android:textSize="15dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_2"
        android:layout_toRightOf="@id/button_ac"
        android:layout_margin="12dp"
        android:text="0"
        android:tag="0"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dot"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_3"
        android:layout_toRightOf="@id/button_0"
        android:layout_margin="12dp"
        android:text="."
        android:tag="."
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="#535050"
        app:cornerRadius="36dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/button_subtract"
        android:layout_toRightOf="@id/button_dot"
        android:layout_margin="12dp"
        android:text="="
        android:tag="="
        android:textColor="@color/white"
        android:textSize="32dp"
        android:backgroundTint="@color/orange"
        app:cornerRadius="36dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/buttons_layout"
        android:textColor="@color/black"
        android:textSize="70dp"
        android:ems="10"
        android:inputType="number" />
    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/outputText"
        android:textColor="@color/black"
        android:textAppearance="@color/black"
        android:textSize="40dp"
        android:ems="10" />



</RelativeLayout>